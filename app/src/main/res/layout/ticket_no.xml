<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="@dimen/_10sdp"
    android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_addaproduct_ticketno"
            android:layout_marginBottom="@dimen/_5sdp"
            android:text="@string/ticket_n_01"
            android:textColor="#033851"
            android:textSize="@dimen/_16ssp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_addaproduct_ticketno"
            android:id="@+id/tv_addaproduct_articles"
            android:text="@string/_9_articles"
            android:textSize="@dimen/_11ssp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:id="@+id/iv_addaproduct_add"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_add" />


</RelativeLayout>